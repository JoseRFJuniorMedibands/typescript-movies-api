{
  "name": "typescript-movies-api",
  "version": "0.0.1",
  "description": "A movies REST API with TypeScript and NodeJS",
  "repository": {},
  "license": "MIT",
  "main": "server.js",
  "scripts": {
    "build": "./node_modules/.bin/tsc --outDir ./dist",
    "start": "node ./dist/server.js",
    "start:watch": "./node_modules/.bin/tsnd --ignore-watch node_modules --watch src/ src/server.ts",
    "dev": "docker-compose up",
    "test": "jest",
    "format": "prettier --write ./**/*.{ts,tsx,json,yml}",
    "lint": "./node_modules/.bin/eslint .",
    "lint:fix": "./node_modules/.bin/eslint --fix ."
  },
  "keywords": [
    "API",
    "REST",
    "TypeScript",
    "NodeJS"
  ],
  "author": "Rafael Dias",
  "devDependencies": {
    "@types/express": "^4.17.7",
    "@types/node": "^14.6.0",
    "@typescript-eslint/eslint-plugin": "^3.9.1",
    "@typescript-eslint/parser": "^3.9.1",
    "eslint": "^7.7.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-import-resolver-typescript": "^2.2.1",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-prettier": "^3.1.4",
    "nodemon": "^2.0.4",
    "prettier": "^2.0.5",
    "ts-node-dev": "^1.0.0-pre.60",
    "typescript": "^4.0.2"
  },
  "dependencies": {
    "express": "^4.17.1",
    "mysql": "^2.18.1",
    "reflect-metadata": "^0.1.13",
    "ts-node": "^9.0.0",
    "typeorm": "^0.2.25"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "npm run start:watch",
    "ext": "ts"
  }
}
